<%= form_for @menu_item do |f| %>
<% if @menu_item.errors.any? %>
  <div>
    <h2>
      Please fix the following errors:
    </h2>
    <ul>
      <% @menu_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p>
  <%= f.label :item %><br>
  <%= f.text_field :item %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.label :price %><br>
  <%= f.text_area :price %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
