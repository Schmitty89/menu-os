<h1>Our schitty food</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th>Price</th>
  </tr>

  <% @menu_items.each do |menu_item| %>
    <tr>
      <td><%=menu_item.item %></td>
      <td><%=menu_item.description %></td>
      <td><%=menu_item.price %></td>
      <td><%= link_to 'Show', menu_item_path(menu_item) %></td>
      <td><%= link_to 'Edit', edit_menu_item_path(menu_item[:id]) %></td>
      <td><%= link_to 'Delete', menu_item_path(menu_item), method: :delete, data: {confirm: 'are you sure'} %></td>
    </tr>
  <% end %>
</table>
